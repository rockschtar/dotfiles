{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "shell_integration": true,
  "iterm_features": ["current_dir", "remote_host"],
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "lightYellow",
          "style": "plain",
          "template": "{{ .UserName }} ",
          "type": "session"
        },
        {
          "foreground": "cyan",
          "properties": {
            "style": "agnoster"
          },
          "style": "plain",
          "template": "<#ffffff>in</> {{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#ff94df",
          "properties": {
            "branch_icon": " <#ff94df><b>\ue0a0 </b></>",
            "fetch_stash_count": true
          },
          "style": "plain",
          "template": "<#ffffff>on</> {{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "lightYellow",
          "template": " {{ .FormattedMs }} ",
          "type": "executiontime"
        },
        {
          "type": "os",
          "style": "plain",
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}}"
        },
        {
          "type": "battery",
          "style": "plain",
          "foreground": "#fff",
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}#000000{{end}}",
            "{{if eq \"Discharging\" .State.String}}#000000{{end}}",
            "{{if eq \"Full\" .State.String}}#000000{{end}}"
          ],
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}%",
          "properties": {
            "discharging_icon": "ðŸª« ",
            "charging_icon": "âš¡ ",
            "charged_icon": "ðŸ”‹ "
          }
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "lightGreen",
          "style": "plain",
          "template": "\u276f",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 3
}
